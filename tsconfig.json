{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "types",
    "scripts",
    "test",
    "typechain",
    "typechain-types",
    "hardhat.config.ts",
    "config.ts",
    "tasks"
  ]
}
